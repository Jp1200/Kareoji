

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="playlists.css.css">
    <title>Document</title>
</head>
<body>
    <div class="App">
        <div class="navBar">
            <div class ="navLinks">
            <%= link_to "Back to Profile", user_path(session[:user_id]) %>
            <%= link_to "About", about_path %>
              
                
            </div>
        </div>

        <div class="mainPlaylist">
            <h1 class="playlistMidWords"> <%= @playlist.name %></h2>
            <div class="songs">
                <h2> Songs:</h2>
                <ul>
                <% @playlist.songs.each do |song| %>
                <li> <img class="img" src=<%=song.url_album%>> <%= link_to song.name, song_path(song) %>, by <%= song.artist.name %>  <%= button_to 'Delete', delete_song_path(song), params:{:id => song.id} %></li>
                    <% end %>
                    </ul><br>
                <%= link_to "add song", new_song_path %> <br>
            </div>
        </div>

        
    </div>

</body>
</html>
