<body>
    <div class="App">
        <div class="navBar">
            <div class ="navLinks">
            
                
              
                <a>About</a>
            </div>
        </div>

        <div class="main">
        <h1 class="midWords"> Sign Up </h1>
<div class="form">
        <%= form_for @user do |f|%>
        <%= f.label :username%>
        <%= f.text_field :username%>
        <%= f.label :password%>
        <%= f.password_field :password%>
        <%= f.submit%>
        <% end %>
        
        <ul>
        <% if @user.errors.any? %>
        <%= pluralize(@user.errors.count, "error") %>
        <% @user.errors.full_messages.each do |msg| %>
           <li> <%= msg %></li>
            <% end %>
            <% end %>
        </ul>
        </div>
        </div>

        <div class="about">
            <p class="aboutTitle">About</p>

