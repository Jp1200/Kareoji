

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="application.css">
    <title>Document</title>
</head>
<body>
    <div class="App">
        <div class="navBar">
            <div class ="navLinks">

            <%=link_to "Home", home_path%>

                <a><%=link_to "About", about_path%></a>
            </div>
        </div>

        <div class="main">
        <h1 class="midWords"> Sign Up </h1>
<div class="form">
        <%= form_for @user do |f|%>
        <%= f.label :username%>
        <%= f.text_field :username%>
        <%= f.label :password%>
        <%= f.password_field :password%>
        <%= f.submit%>
        <% end %>

        <ul>
        <% if @user.errors.any? %>
        <%= pluralize(@user.errors.count, "error") %>
        <% @user.errors.full_messages.each do |msg| %>
           <li> <%= msg %></li>
            <% end %>
            <% end %>
        </ul>
        </div>
        </div>

        

    </div>

</body>
</html>
